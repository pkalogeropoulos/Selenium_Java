    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test thread-count="5" parallel="classes" name="Sample validations and integration tests for the demowebshop.tricentis.com site">
        <classes>
            <class name="com.example.demowebshop.tests.search.BookProductTest"/>
            <class name="com.example.demowebshop.tests.search.SearchResultsPageTest"/>
